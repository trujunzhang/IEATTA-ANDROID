<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SectionText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/BlackText</item>

        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/black_yoni</item>

        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="SubtitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/GreyMidText</item>
    </style>


    <style name="cell_style">
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="RelativeTimeAgoText">
        <item name="android:background">@drawable/list_item_background</item>
    </style>

</resources>