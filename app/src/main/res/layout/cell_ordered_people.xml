<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/NearRestaurant_Restaurants">

    <com.ieatta.android.extensions.viewkit.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/Left_Image_View_Width"
        android:layout_height="@dimen/Left_Image_View_Height"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:placeholderImage="@drawable/blank_user_small"
        app:placeholderImageScaleType="centerCrop"
        app:failureImage="@drawable/blank_user_small"
        app:failureImageScaleType="centerCrop"
        app:actualImageScaleType="centerCrop"
        android:background="@color/window_background_light"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/avatarView"
        android:text="Medium Text"
        android:textAppearance="@style/TitleText" />

    <TextView
        android:id="@+id/recipesCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/avatarView"
        android:singleLine="true"
        android:text="Medium Text"
        android:textAppearance="@style/TitleText" />
</RelativeLayout>