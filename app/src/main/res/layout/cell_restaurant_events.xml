<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_item_vertical_padding"
    android:paddingLeft="@dimen/list_item_horizontal_padding"
    android:paddingRight="@dimen/list_item_horizontal_padding"
    style="@style/cell_style"
    android:paddingTop="@dimen/list_item_vertical_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eventIconImageView"
            android:layout_width="@dimen/Event_Icon_Width"
            android:layout_height="@dimen/Event_Icon_Height"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/nav_events"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/eventIconImageView"
            android:layout_toLeftOf="@+id/timeAgoTextView">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TitleText"
                android:textSize="@dimen/abc_text_size_menu_material" />

            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTextView"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="16dp"
                android:textAppearance="@style/SubtitleText" />
        </LinearLayout>

        <TextView
            android:id="@+id/timeAgoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:text="Medium Text"
            android:textColor="@color/GreyMidText"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>

