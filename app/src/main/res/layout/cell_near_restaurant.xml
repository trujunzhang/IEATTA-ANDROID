<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/cell_style"
    android:layout_width="match_parent"
    android:layout_height="@dimen/NearRestaurant_Restaurants">

    <org.ieatta.views.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/Left_Image_View_Width"
        android:layout_height="@dimen/Left_Image_View_Height"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:contentDescription="@null"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/blank_biz"
        app:failureImageScaleType="centerCrop"
        app:placeholderImage="@drawable/blank_biz"
        app:placeholderImageScaleType="centerCrop" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/avatarView"
        android:text="Medium Text" />

    <TextView
        android:id="@+id/addressTextView"
        style="@style/SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/avatarView"
        android:singleLine="true"
        android:text="Medium Text" />

</RelativeLayout>